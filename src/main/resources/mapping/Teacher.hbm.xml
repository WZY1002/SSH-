<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 用于声明 实例类和表的映射关系
    声明 属性和表中列(字段)的对应关系 -->
    <class name="com.pl.model.TeacherEntity"
           table="teacher">
        <!-- id标签用于映射主键列 -->
        <id name="id" column="id"></id>
        <!-- property标签用于映射普通属性 -->
        <property name="password" column="password"/>
        <property name="mobile_phone" column="mobile_phone"/>
        <property name="name" column="name"/>
        <property name="cardId" column="cardid"/>
        <property name="sex" column="sex"/>
        <property name="photo" column="photo"/>
        <property name="department" column="department"/>
        <property name="nation" column="nation"/>
        <property name="birth" column="birth"/>
        <property name="place" column="place"/>
        <property name="politics" column="politics"/>
        <property name="healthy" column="healthy"/>
        <property name="address" column="address"/>
        <property name="home_phone" column="home_phone"/>
        <property name="workingTime" column="workingtime"/>
        <property name="identity" column="identity"/>
        <property name="employ_time" column="employ_time"/>
        <property name="education" column="education"/>
        <property name="school" column="school"/>
    </class>
</hibernate-mapping>